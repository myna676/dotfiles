{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    "height": 27, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 5, // Gaps between modules (4px)
    // Choose the order of the modules

    "margin-top": 8,
    "margin-right": 15,
    "margin-bottom": 0,
    "margin-left": 15,


    "modules-left": [
        "hyprland/workspaces",
    ],
    "modules-center": [
        "clock",
    ],
    "modules-right": [
        "pulseaudio",
        "power-profiles-daemon",
	"group/hardware",
        "backlight",
        "battery",
        "tray"
    ],
    // Modules configuration
     "hyprland/workspaces": {
         "disable-scroll": true,
         "all-outputs": true,
         "warp-on-scroll": false,
         "format": "{icon}",
         "format-icons": {
             "active": "ÔÜí",
             "default": "ÔÑë"
         }
     },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "group/hardware": {
        "orientation": "horizontal",
	"modules": [
		"cpu",
		"memory",
		"temperature"
	]
    },
    "clock": {
        // "timezone": "America/New_York",
	"format": "{:%I:%M %p - %a %Y-%m-%d}",
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
